#!/usr/bin/env python

import sys
import cv2
import numpy

input_path = sys.argv[1]
output_path = sys.argv[2] + "/"

img = cv2.imread(input_path)

if(img == None):
    print "Error! Could not find image at " + input_path
    exit(2)

try:
    decimg = cv2.imdecode(img)
except:
    print "Error! Could not decode image at " + input_path
    exit(3)

print "Writing images to " + output_path
cv2.imwrite(output_path + "regular.jpg", img)
#cv2.imshow(input_path, img)
#cv2.waitKey(0)
#cv2.destroyAllWindows()
